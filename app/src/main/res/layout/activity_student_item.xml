<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.StudentItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/user" />

            <ImageView
                android:id="@+id/aadhar_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/aadhar_number"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/user" />


            <ImageView
                android:id="@+id/parent_aadhar_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/parent_aadhar_number"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui_bold"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/imageView"
                android:text="Student Details"
                android:textColor="@color/Text"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/segoe_ui"
                android:text="Student Details"
                android:textColor="@color/Text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/segoe_ui"
                android:text="Student Details"
                android:textColor="@color/Text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/segoe_ui"
                android:text="Student Details"
                android:textColor="@color/Text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ph_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/segoe_ui"
                android:text="Student Details"
                android:textColor="@color/Text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/join_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ph_num"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/segoe_ui"
                android:text="Student Details"
                android:textColor="@color/Text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/leave_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/join_date"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/segoe_ui"
                android:text="Student Details"
                android:textColor="@color/Text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/academ_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/leave_date"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/segoe_ui"
                android:text="Student Details"
                android:textColor="@color/Text"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/fees_per_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/academ_year"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/segoe_ui"
                android:text="Student Details"
                android:textColor="@color/Text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/total_fees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fees_per_month"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/segoe_ui"
                android:text="Student Details"
                android:textColor="@color/Text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/paid_fees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total_fees"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/segoe_ui"
                android:text="Student Details"
                android:textColor="@color/Text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/due_fees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/paid_fees"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/segoe_ui"
                android:text="Student Details"
                android:textColor="@color/Text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/due_fees"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/segoe_ui"
                android:text="Student Details"
                android:textColor="@color/Text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/aadhar_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/remark"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/segoe_ui_bold"
                android:gravity="center"
                android:text="Student Aadhar Details"
                android:textColor="@color/Text"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/aadhar_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aadhar_details"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/segoe_ui"
                android:text="Student Details"
                android:textColor="@color/Text"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/parent_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aadhar_image"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/segoe_ui_bold"
                android:gravity="center"
                android:text="Student Parent Details"
                android:textColor="@color/Text"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/parent_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parent_details"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/segoe_ui"
                android:text="Student Details"
                android:textColor="@color/Text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/parent_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parent_name"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/segoe_ui"
                android:text="Student Details"
                android:textColor="@color/Text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/parent_aadhar_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parent_number"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/segoe_ui"
                android:text="Student Details"
                android:textColor="@color/Text"
                android:textSize="20sp" />


        </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>